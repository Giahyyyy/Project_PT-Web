<!-- Nội dung trang -->
<div id='mainContent'>
  <div class="container-fluid">
    <h4 class="c-grey-900 mT-10 mB-30">User List</h4>
    <div class="row">
      <div class="col-md-12">
        <div class="bgc-white bd bdrs-3 p-20 mB-20">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Username</th>
                <th scope="col">Actions</th> <!-- Thêm cột Actions -->
              </tr>
            </thead>
            <tbody>
              {{#each users}}
                <tr>
                  <th scope="row">{{@index}}</th>
                  <td>{{this.first_name}}</td>
                  <td>{{this.last_name}}</td>
                  <td>{{this.email}}</td>
                  <td>
                    <button class="btn btn-danger" onclick="deleteUser('{{this._id}}')">Delete</button>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  async function deleteUser(userId) {
    const confirmed = confirm('Are you sure you want to delete this user?');
    if (confirmed) {
      try {
        const response = await fetch(`/admin/UserList/users/${userId}/delete`, {
          method: 'POST',
        });

        const result = await response.json();
        alert(result.message);

        if (result.success) {
          // Nếu xóa thành công, làm điều gì đó (ví dụ: cập nhật UI)
          location.reload();
        }
      } catch (error) {
        console.error('Error deleting user:', error);
        alert('Error deleting user. Please try again.');
      }
    }
  }
</script>
